<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>...</title>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: black;
            cursor: none; /* Esconde o mouse */
        }

        video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* Preenche a tela */
        }
    </style>
</head>
<body>

    <video id="bgVideo" autoplay loop muted playsinline>
        <source src="Erro.mp4" type="video/mp4">
        Seu navegador não suporta vídeo.
    </video>

    <script>
        // Bloqueio de teclas (limitação do navegador)
        document.addEventListener("keydown", function(e) {
            if (
                e.key === "F11" ||
                e.key === "Escape" ||
                (e.ctrlKey && e.key === "w") ||
                (e.altKey && e.key === "Tab")
            ) {
                e.preventDefault();
                return false;
            }
        });

        // Bloqueia clique direito
        document.addEventListener("contextmenu", function(e) {
            e.preventDefault();
        });

        // Força fullscreen ao clicar
        document.addEventListener("click", () => {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(() => {});
            }
        });
    </script>

</body>
</html>
